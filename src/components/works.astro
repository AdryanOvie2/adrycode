<style>
    .hidden{
        display: none;
    }
    .flex{
        display: flex;
    }
    .works-tabs{
        display: flex;
        gap: 1rem;
    }
        .work-links{
            border: none;
            background: none;
            color: #dadada;
            padding: .5rem 1rem;
            font-size: 1rem;
            cursor: pointer;
        }
        .work-content{
            padding-top: 1rem;
            transition: display ease-in-out 10s;
        }
    .active{
        border-bottom: 1px solid var(--color-js);
        transition: border-bottom .3s;
    }
</style>

<section class="works">
    <div class="works-tabs">
        <button class="work-links active">Technologys</button>
        <button class="work-links">Projects</button>
    </div>

    <section id="tech" class="work-content">
        <box-icon size="5rem" color="#ffffff" type='logo' name='html5'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='css3'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='bootstrap'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='javascript'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='git'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='github'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='nodejs'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='react'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='tailwind-css'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='typescript'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='mongodb'></box-icon>
        <box-icon size="5rem" color="#ffffff" type='logo' name='figma'></box-icon>
    </section>
    <section id="project" class="work-content hidden">
        <h3>Projects</h3>
    </section>
</section>

<script>


    const buttons = document.querySelectorAll('button.work-links');
    const tabs = document.querySelectorAll('section.work-content');

    buttons.forEach((button, i) => {
        button.addEventListener('click', () => {
            // Agregar la clase "active" al botón que se hizo clic
            buttons.forEach((btn) => btn.classList.remove('active'));
            button.classList.add('active');

            // Ocultar todas las tabs
            tabs.forEach((tab) => tab.classList.add('hidden'));

            // Mostrar solo la tab correspondiente al botón que se hizo clic
            tabs[i].classList.remove('hidden');
        });
    });
</script>