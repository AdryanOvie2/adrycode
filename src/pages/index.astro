<style>
	main {
		height: 100%;
		position: relative;
		overflow-y: auto;
		padding: 2.5rem 0;
		display: flex;
		place-items: center;
		justify-content: center;
	}
	.container{
		width: 70ch;
		margin: auto;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.divider{
		width: 10%;
		margin: auto;
		border-color: var(--color-jsB);
	}
	.socialMedia{
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
	}
</style>
